{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "declarations.d.ts"
    ],

    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    }
  }
}
